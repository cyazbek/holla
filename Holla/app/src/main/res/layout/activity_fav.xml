<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="50dp"
    android:columnCount="2"
    tools:context="com.chrisyazbek.holla.FavActivity"
    android:background="@drawable/tell_bg">

    <TextView
        android:text="Who you want to text?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false"
        android:id="@+id/textView2"
        android:textSize="22sp"
        android:layout_columnSpan="2"
        android:textColor="#E32525" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/joker">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_joker"
                android:id="@+id/joker_view"
                android:layout_weight="85"
                android:clickable="false"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_weight="15"
                android:textAlignment="center"
                android:textSize="24sp"
                android:text="Devolution"
                android:textIsSelectable="false"
                android:textColor="#E32525" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:weightSum="100"
            android:clickable="true"
            android:id="@+id/gjoker">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_jokeygirl"
                android:id="@+id/imageView3"
                android:layout_weight="85"
                android:clickable="false" />

            <TextView
                android:text="Croesus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="15"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="#E32525" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:weightSum="100"
            android:id="@+id/greenlantern">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_greenlantern"
                android:id="@+id/imageView4"
                android:layout_weight="85"
                android:clickable="false" />

            <TextView
                android:text="Mirego"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="15"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="#E32525" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:clickable="true"
            android:id="@+id/flash">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_flash"
                android:id="@+id/imageView5"
                android:layout_weight="85"
                android:clickable="false" />

            <TextView
                android:text="Genetec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_weight="15"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="#E32525" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:weightSum="100"
            android:id="@+id/superman">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_superman"
                android:id="@+id/imageView6"
                android:layout_weight="85"
                android:clickable="false" />

            <TextView
                android:text="IBM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_weight="15"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="#E32525" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:layout_weight="50"
            android:id="@+id/more">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_moredot"
                android:id="@+id/imageView7"
                android:layout_weight="85"
                android:clickable="false" />

            <TextView
                android:text="More"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:layout_weight="15"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="#E32525" />
        </LinearLayout>

    <Button
        android:id="@+id/TestMe"

        />
</GridLayout>
